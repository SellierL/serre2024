</head>
<body>

<!-- Navigation Bar -->

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="#">
      <img src="https://png.pngtree.com/png-vector/20220625/ourmid/pngtree-laboratory-logo-template-lab-vector-png-image_5416964.png" alt="Photo 1" class="img-fluid" style="max-height: 80px;">
    </a>
  </div>
</nav>

<div class="container mt-5">
  <h1>Formulaire d'expérience</h1>
  <form>
    <div class="mb-3">
      <label for="description" class="form-label">Description de l'expérience</label>
      <textarea class="form-control" id="description" rows="3"></textarea>
    </div>
    <div class="row mb-3">
      <div class="col">
        <label for="dateDebut" class="form-label">Date de début</label>
        <input type="date" class="form-control" id="dateDebut">
      </div>
      <div class="col">
        <label for="dateFin" class="form-label">Date de fin</label>
        <input type="date" class="form-control" id="dateFin">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col">
        <label for="heureDebut" class="form-label">Heure de début</label>
        <input type="time" class="form-control" id="heureDebut">
      </div>
      <div class="col">
        <label for="heureFin" class="form-label">Heure de fin</label>
        <input type="time" class="form-control" id="heureFin">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col">
        <label for="tempJour" class="form-label">Température de jour (°C)</label>
        <input type="number" class="form-control" id="tempJour">
      </div>
      <div class="col">
        <label for="tempNuit" class="form-label">Température de nuit (°C)</label>
        <input type="number" class="form-control" id="tempNuit">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col">
        <label for="humidite" class="form-label">Humidité (%)</label>
        <input type="number" class="form-control" id="humidite">
      </div>
      <div class="col">
        <label for="seuilAlarme" class="form-label">Seuil d'alarme de température (°C)</label>
        <input type="number" class="form-control" id="seuilAlarme">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Envoyer</button>
  </form>
</div>

<!-- Ajout du lien vers Bootstrap JS -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
