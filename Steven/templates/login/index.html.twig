{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}


{% block contenu %}
<!--   debut contenu bloc login -->

<div class="card">
    <div class="card-header">
        <h3>Login</h3>
    </div>
    <div class="card-body">
        <!--   debut formulaire login -->
        {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
            <div class="form-group">
                {{ form_row(form.Login) }}
            </div>
            <div class="form-group">
                {{ form_row(form.HashMotDePasse) }}
            </div>

        {{ form_end(form) }}
        <!--   fin formulaire login -->
    </div>
</div>
<!--   fin contenu bloc login -->
{% endblock %}
